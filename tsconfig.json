{
  "compilerOptions": {
    "target": "es5",                         
    "module": "commonjs",
    "lib": ["es6"],                    
    
    "removeComments": true,
    "sourceMap": true,           
    

    "strict": true,                           
    "noImplicitAny": true,                 
    "strictNullChecks": true,              
    "strictFunctionTypes": true,           
    "strictPropertyInitialization": true, 
    "noImplicitThis": true,               
    "alwaysStrict": true,                  

    "noFallthroughCasesInSwitch": true,  
    
    "baseUrl": "./src",        
    "paths": {"lexical-analyzer/*": ["./*"]},              
    "esModuleInterop": true,
    "downlevelIteration": true,      

    
  }
}
